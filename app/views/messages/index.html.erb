<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br />
    <% end %>
  </div>
</div>

<%= form_for(Message.new, :html => {class: "form-inline"}) do |f| %>
  <div class="form-group">
    <label for="inputName">名前:</label>
    <%= f.text_field :name, class: "form-control", id: "inputName", placeholder: "Type your name" %>
  </div>

  <div class="form-group">
    <label for="inputBody">内容:</label>
    <%= f.text_area :body, class: "form-control", id: "inputBody", placeholder: "Message", size: "40x3" %>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
